@model IEnumerable<SistemaVeterinaria.Models.tbCita>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Fecha Cita")
        </th>
        <th>
            @Html.DisplayName("Hora Cita")
        </th>
        <th>
            @Html.DisplayName("Descripcion")
        </th>
        <th>
            @Html.DisplayName("Fecha")
        </th>
        <th>
            @Html.DisplayName("Nombre Empleado")
        </th>
        <th>
            @Html.DisplayName("Nombre Paciente")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_cita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora_cita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descrip_cita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbEmpleado.NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tbpaciente.nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.cod_cita }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id=item.cod_cita }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id = item.cod_cita }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

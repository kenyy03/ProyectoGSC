@model SistemaVeterinaria.Models.tbPuesto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Puesto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre Puesto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_puesto)
        </dd>

        <dt>
            Salario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.salario)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.cod_puesto }, new { @class = "btn btn-warning mr-1" }) |
    @Html.ActionLink("Regresar", "Index",null, new { @class = "btn btn-primary ml-1" })
</p>

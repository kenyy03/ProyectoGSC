@model SistemaVeterinaria.Models.tbPuesto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>¿Estas seguro que quieres eliminar esto?</h3>
<div>
    <h4>Puesto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre Puesto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_puesto)
        </dd>

        <dt>
            Salario
        </dt>

        <dd>
            @Html.DisplayFor(model => model.salario)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger mr-1" /> |
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary ml-1" })
        </div>
    }
</div>

@model IEnumerable<SistemaVeterinaria.Models.tbEmpleado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre del empleado")
        </th>
        <th>
            @Html.DisplayName("Apellido del empleado")
        </th>
        <th>
            @Html.DisplayName("Direccion")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DNI)
        </th>
        <th>
            @Html.DisplayName("Fecha de ingreso")
        </th>
        <th>
            @Html.DisplayName("Nombre del puesto de trabajos")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.APELLIDO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIRECCION)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DNI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_ing)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbPuesto.nombre_puesto)
        </td>
        <td class="d-flex flex-column">
            @Html.ActionLink("Edit", "Edit", new { id=item.cod_empleado }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Details", "Details", new { id=item.cod_empleado }, new { @class = "btn btn-info mt-2" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.cod_empleado }, new { @class = "btn btn-danger mt-2" })
        </td>
    </tr>
}

</table>

@model SistemaVeterinaria.Models.tbEmpleado

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre del Empleado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NOMBRE)
        </dd>

        <dt>
            Apellido del Empleado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.APELLIDO)
        </dd>

        <dt>
            Direccion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIRECCION)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DNI)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DNI)
        </dd>

        <dt>
            Fecha de ingreso
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_ing)
        </dd>

        <dt>
            Nombre del puesto de trabajo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tbPuesto.nombre_puesto)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.cod_empleado }, new { @class = "btn btn-warning mr-1" }) |
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary ml-1" })
</p>
